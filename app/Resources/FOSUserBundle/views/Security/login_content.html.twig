{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert-danger">Usuário ou senha inválidos</div>
{% endif %}

<div class="col-md-4 offset-4">
    <div class="login-panel card card">
        <div class="card-header">
            <h3 class="card-title">Login</h3>
        </div>
        <div class="card-body">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <fieldset>
                    <div class="form-group">
                        <input class="form-control" placeholder="Usuário" id="username" name="_username" value="{{ last_username }}" type="text" autofocus="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" placeholder="Senha" type="password" id="password" name="_password" value="">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input id="remember_me" name="_remember_me" value="on" type="checkbox">Lembrar
                        </label>
                    </div>                
                    <input type="submit" id="_submit" name="_submit" value="Logar" class="btn btn-sm btn-success" />
                </fieldset>
            </form>
        </div>        
    </div>
    <a href="/resetting/request">Esqueceu a Senha?</a>
</div>