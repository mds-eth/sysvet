{% extends 'base.html.twig' %}

{% block body %}
    <h3>Agendamento     <a href="{{ path('agendamento_index') }}" class="btn btn-primary float-left" style="margin: 5px">Back to the list</a></h3>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ agendamento.id }}</td>
            </tr>
            <tr>
                <th>Horario</th>
                <td>{% if agendamento.horario %}{{ agendamento.horario|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>



    <a href="{{ path('agendamento_edit', { 'id': agendamento.id }) }}" class="btn btn-primary float-left" style="margin: 5px">Edit</a>
    {{ form_start(delete_form) }}
    <input type="submit" value="Apagar" class="btn btn-danger" style="margin: 5px">
    {{ form_end(delete_form) }}

{% endblock %}
